<%= form_with(model: recipe, class: "mt-4") do |form| %>
  <% if recipe.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(recipe.errors.count, "error") %> impediram que esta receita fosse salva:</h2>

      <ul>
        <% recipe.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, class: "text-md-start" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description, class: "text-md-start" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :ingredients, class: "text-md-start" %>
    <%= form.text_area :ingredients, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :instructions, class: "text-md-start" %>
    <%= form.text_area :instructions, class: "form-control" %>
  </div>

  <div class="form-group text-md-start">
    <%= form.submit "Salvar Alterações", class: "btn btn-primary" %>
  </div>
<% end %>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    